@model IEnumerable<Ecom.Data.Product>
@{
    ViewBag.Title = "Index";
}
@if (Model.Count() == 0)
{
    <h5 class="text-center">No products found</h5>
}
<div class="container">
    <a href="/Product/Create" class="btn btn-primary">Add new product</a>
</div>
<div class="row justify-content-center">
    @foreach (var p in Model)
    {
    <a href="/Product/AddToCart/@p.Id">
        <div class="col-auto border p-2 m-2" style="max-width:18rem;">
            @{
                var imgdata = Convert.ToBase64String(p.ProductImage);
            }
            <img style="height:180px;width:180px;" src="data:image/jpeg;base64,@imgdata" />
            <div class="text-center">
                <h5>@p.ProductName</h5>
                <h5 class="font-weight-bold">@p.Price.ToString("C2")</h5>
                <hr />
                <button class="btn btn-primary btn-block">Add to cart</button>
            </div>

        </div>
    </a>
        
    }
</div>
